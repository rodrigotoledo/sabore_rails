<div class="min-h-screen bg-gradient-to-br from-yellow-50 to-yellow-100 flex items-center justify-center px-4">
  <div class="w-full max-w-md">
    <!-- Logo e t√≠tulo -->
    <div class="text-center mb-8">
      <%= link_to root_path, class: "inline-flex items-center gap-3 text-yellow-600 hover:text-yellow-700 transition" do %>
        <div class="w-12 h-12 bg-yellow-500 rounded-xl flex items-center justify-center shadow-lg">
          <span class="text-white text-xl">üçΩÔ∏è</span>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Sabore</h1>
          <p class="text-sm text-gray-600">Crie sua conta e descubra os melhores restaurantes</p>
        </div>
      <% end %>
    </div>

    <!-- Card de cadastro -->
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <div class="text-center mb-6">
        <h2 class="text-2xl font-bold text-gray-900">Criar conta</h2>
        <p class="text-gray-600 mt-2">Junte-se a n√≥s e fa√ßa suas reservas</p>
      </div>

      <% if flash[:alert] %>
        <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-red-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <p class="text-red-700 font-medium"><%= flash[:alert] %></p>
          </div>
        </div>
      <% end %>

      <%= form_with model: @user, class: "space-y-6" do |form| %>
        <div>
          <label for="user_email_address" class="block text-sm font-semibold text-gray-700 mb-2">
            Email
          </label>
          <%= form.email_field :email_address,
            required: true,
            autofocus: true,
            autocomplete: "username",
            placeholder: "seu@email.com",
            class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition-colors text-gray-900 placeholder-gray-500"
          %>
          <% if form.object.errors[:email_address].any? %>
            <p class="mt-1 text-sm text-red-600"><%= form.object.errors[:email_address].first %></p>
          <% end %>
        </div>

        <div>
          <label for="user_password" class="block text-sm font-semibold text-gray-700 mb-2">
            Senha
          </label>
          <%= form.password_field :password,
            required: true,
            autocomplete: "new-password",
            placeholder: "‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢",
            minlength: 6,
            class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition-colors text-gray-900 placeholder-gray-500"
          %>
          <% if form.object.errors[:password].any? %>
            <p class="mt-1 text-sm text-red-600"><%= form.object.errors[:password].first %></p>
          <% end %>
          <p class="mt-1 text-xs text-gray-500">M√≠nimo 6 caracteres</p>
        </div>

        <div>
          <label for="user_password_confirmation" class="block text-sm font-semibold text-gray-700 mb-2">
            Confirmar senha
          </label>
          <%= form.password_field :password_confirmation,
            required: true,
            autocomplete: "new-password",
            placeholder: "‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢",
            class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition-colors text-gray-900 placeholder-gray-500"
          %>
          <% if form.object.errors[:password_confirmation].any? %>
            <p class="mt-1 text-sm text-red-600"><%= form.object.errors[:password_confirmation].first %></p>
          <% end %>
        </div>

        <div>
          <%= form.submit "Criar conta",
            class: "w-full bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-3 px-4 rounded-xl transition-colors shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
          %>
        </div>
      <% end %>

      <!-- Link para login -->
      <div class="mt-6 text-center">
        <p class="text-gray-600">
          J√° tem uma conta?
          <%= link_to "Fazer login", new_session_path, class: "text-yellow-600 hover:text-yellow-700 font-semibold hover:underline transition" %>
        </p>
      </div>
    </div>

    <!-- Footer -->
    <div class="text-center mt-8">
      <p class="text-sm text-gray-500">
        ¬© 2025 Sabore. Todos os direitos reservados.
      </p>
    </div>
  </div>
</div>
