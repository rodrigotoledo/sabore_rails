<% content_for :title, "Detalhes da Reserva" %>

<div class="min-h-screen bg-gray-50">
  <% if notice.present? %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-4 mx-4">
      <%= notice %>
    </div>
  <% end %>

  <!-- Header da reserva -->
  <div class="bg-white shadow-sm border-b">
    <div class="px-4 py-4">
      <div class="flex items-center gap-3 mb-3">
        <%= link_to reservations_path, class: "p-2 hover:bg-gray-100 rounded-lg transition" do %>
          <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Detalhes da Reserva</h1>
          <p class="text-sm text-gray-600">Reserva #<%= @reservation.id %></p>
        </div>
      </div>

      <div class="flex items-center justify-between">
        <span class="px-3 py-1 rounded-full text-sm font-semibold <%= case @reservation.status
                                                                       when 'confirmed' then 'bg-green-100 text-green-800'
                                                                       when 'completed' then 'bg-blue-100 text-blue-800'
                                                                       when 'cancelled' then 'bg-red-100 text-red-800'
                                                                       else 'bg-yellow-100 text-yellow-800'
                                                                       end %>">
          <%= case @reservation.status
              when 'confirmed' then 'âœ“ Confirmada'
              when 'completed' then 'âœ“ ConcluÃ­da'
              when 'cancelled' then 'âœ— Cancelada'
              else 'â³ Pendente'
              end %>
        </span>
      </div>
    </div>
  </div>

  <!-- ConteÃºdo principal -->
  <div class="px-4 py-6 space-y-6">
    <!-- Card do Estabelecimento -->
    <div class="bg-white rounded-xl shadow-md p-6">
      <h2 class="text-lg font-bold text-gray-900 mb-4">ğŸª Restaurante</h2>
      <div class="space-y-3">
        <h3 class="font-bold text-xl text-gray-900">
          <%= link_to @reservation.establishment.name, establishment_path(@reservation.establishment), class: "hover:text-yellow-600 transition" %>
        </h3>
        <p class="text-gray-600"><%= @reservation.establishment.description %></p>
        <p class="text-gray-500 text-sm flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <%= @reservation.establishment.address %>
        </p>
        <% if @reservation.establishment.phone.present? %>
          <p class="text-gray-500 text-sm flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <%= @reservation.establishment.phone %>
          </p>
        <% end %>
        <div class="flex items-center gap-2">
          <span class="text-yellow-500">â˜…</span>
          <span class="font-semibold text-gray-700"><%= @reservation.establishment.rating || '4.8' %></span>
        </div>
      </div>
    </div>

    <!-- Card dos detalhes da reserva -->
    <div class="bg-white rounded-xl shadow-md p-6">
      <h2 class="text-lg font-bold text-gray-900 mb-4">ğŸ“‹ Detalhes da Reserva</h2>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <p class="text-xs text-gray-500 mb-1">Data e Hora</p>
          <p class="font-bold text-lg text-gray-900">
            <%= @reservation.date.strftime('%d/%m/%Y') %>
          </p>
          <p class="text-gray-600">
            <%= @reservation.date.strftime('%H:%M') %>
          </p>
        </div>
        <div>
          <p class="text-xs text-gray-500 mb-1">Pessoas</p>
          <p class="font-bold text-lg text-gray-900">
            <%= @reservation.people_count %>
          </p>
          <p class="text-gray-600">
            pessoa<%= @reservation.people_count > 1 ? 's' : '' %>
          </p>
        </div>
      </div>

      <% if @reservation.email.present? %>
        <div class="mt-4 pt-4 border-t border-gray-200">
          <p class="text-xs text-gray-500 mb-1">Email de Contato</p>
          <p class="text-gray-900"><%= @reservation.email %></p>
        </div>
      <% end %>

      <% unless @reservation.user_id.present? %>
        <div class="mt-4 p-3 bg-blue-50 rounded-lg">
          <p class="text-sm text-blue-700">ğŸ“§ Esta Ã© uma reserva anÃ´nima</p>
        </div>
      <% end %>
    </div>

    <!-- AÃ§Ãµes -->
    <div class="space-y-3">
      <% if @reservation.date >= Time.current && ['confirmed', 'pending'].include?(@reservation.status) %>
        <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-4">
          <h3 class="font-semibold text-yellow-800 mb-2">âš ï¸ Precisa cancelar?</h3>
          <p class="text-sm text-yellow-700 mb-3">Cancelamentos devem ser feitos com antecedÃªncia.</p>
          <%= button_to "Cancelar Reserva", @reservation, method: :delete,
              class: "w-full py-3 px-4 bg-red-600 text-white rounded-lg font-semibold hover:bg-red-700 transition",
              data: { turbo_confirm: "Tem certeza que deseja cancelar esta reserva?" } %>
        </div>
      <% end %>

      <%= link_to "Voltar Ã s Reservas", reservations_path,
          class: "block w-full text-center py-3 px-4 bg-gray-100 text-gray-900 rounded-lg font-semibold hover:bg-gray-200 transition" %>
    </div>
  </div>
</div>
