<% content_for :title, @establishment.name %>

<div class="min-h-screen bg-gray-50">
  <% if notice.present? %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-4 mx-4 mt-4">
      <%= notice %>
    </div>
  <% end %>

  <!-- Card principal -->
  <div class="mx-4 mt-4">
    <div class="bg-white rounded-2xl shadow-xl p-6">
      <!-- Header com logo e info principal -->
      <div class="flex items-start gap-4 mb-6">
        <!-- Logo -->
        <div class="w-20 h-20 bg-linear-to-br from-yellow-400 to-yellow-500 rounded-2xl shadow-lg flex items-center justify-center text-white font-bold text-2xl shrink-0">
          <% if @establishment.logo.attached? %>
            <%= image_tag @establishment.logo, class: "w-full h-full object-cover rounded-2xl" %>
          <% else %>
            <%= @establishment.name.first.upcase %>
          <% end %>
        </div>
        </div>

        <!-- Informa√ß√µes principais -->
        <div class="flex-1 min-w-0">
          <h1 class="text-2xl md:text-3xl font-bold text-gray-900 mb-1"><%= @establishment.name %></h1>
          <p class="text-yellow-600 font-medium text-sm mb-2">
            üçΩÔ∏è <%= @establishment.primary_category %>
          </p>
          <div class="flex items-center gap-4">
            <div class="flex items-center gap-1">
              <span class="text-yellow-500 text-lg">‚òÖ</span>
              <span class="font-bold text-gray-900"><%= @establishment.rating || '4.8' %></span>
              <span class="text-gray-500 text-sm">(128 avalia√ß√µes)</span>
            </div>
            <span class="px-3 py-1 bg-green-100 text-green-700 text-xs font-semibold rounded-full">
              ‚úì Aberto
            </span>
          </div>
        </div>
      </div>

      <!-- Descri√ß√£o -->
      <% if @establishment.description.present? %>
        <div class="mb-6 p-4 bg-gray-50 rounded-xl">
          <p class="text-gray-700 leading-relaxed"><%= @establishment.description %></p>
        </div>
      <% end %>

      <!-- Informa√ß√µes de contato -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
        <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg">
          <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <div class="flex-1">
            <p class="text-xs text-gray-500 font-medium">Endere√ßo</p>
            <p class="text-gray-900 font-medium"><%= @establishment.address %></p>
          </div>
        </div>

        <% if @establishment.phone.present? %>
          <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg">
            <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <div class="flex-1">
              <p class="text-xs text-gray-500 font-medium">Telefone</p>
              <p class="text-gray-900 font-medium"><%= @establishment.phone %></p>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Galeria de fotos -->
      <% if @establishment.photos.any? %>
        <div class="mb-6">
          <h3 class="text-lg font-bold text-gray-900 mb-3">üì∏ Fotos do Local</h3>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
            <% @establishment.photos.limit(6).each do |photo| %>
              <div class="aspect-square bg-gray-200 rounded-lg overflow-hidden">
                <%= image_tag photo, class: "w-full h-full object-cover hover:scale-105 transition-transform cursor-pointer" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- A√ß√µes principais -->
      <div class="space-y-3">
        <%= link_to new_reservation_path(establishment_id: @establishment.id),
            class: "block w-full text-center py-4 px-6 bg-gradient-to-r from-yellow-400 to-yellow-500 hover:from-yellow-500 hover:to-yellow-600 text-white font-bold rounded-xl shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-0.5" do %>
          üçΩÔ∏è Fazer Reserva
        <% end %>

        <div class="grid grid-cols-2 gap-3">
          <%= link_to explore_index_path,
              class: "text-center py-3 px-4 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-lg transition" do %>
            üó∫Ô∏è Ver no Mapa
          <% end %>

          <button class="py-3 px-4 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-lg transition">
            üìû Ligar
          </button>
        </div>
      </div>

      <!-- Menu/Card√°pio -->
      <div class="mt-8 p-4 bg-linear-to-r from-blue-50 to-purple-50 rounded-xl border border-blue-100">
        <div class="flex items-center justify-between mb-3">
          <h3 class="text-lg font-bold text-gray-900">üìú Card√°pio</h3>
          <span class="text-sm text-gray-500">Em breve</span>
        </div>
        <p class="text-gray-600 text-sm">Card√°pio digital estar√° dispon√≠vel em breve!</p>
      </div>
    </div>
  </div>
</div>
