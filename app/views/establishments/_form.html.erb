  </div>

  <div class="my-5">
    <%= form.label :rating %>
    <%= form.text_field :rating, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": establishment.errors[:rating].none?, "border-red-400 focus:outline-red-600": establishment.errors[:rating].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :establishment_type %>
